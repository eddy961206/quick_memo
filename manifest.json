{
  "manifest_version": 3,
  "name": "Simplist Memo Of All Time (SMOAT)",
  "version": "1.0.0",
  "description": "Simplest notepad Chrome extension for quick notes with automatic saving.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  }
} 